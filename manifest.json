{
    "manifest_version": 2,
    "name": "YouTube Audio Downloader",
    "version": "1.0",
    "description": "Download YouTube video audio directly via Firefox.",
    "icons": {
        "48": "icon.png"
    },
    "permissions": [
        "activeTab",
        "downloads",
        "nativeMessaging"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Download Audio"
    },
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "js": ["content.js"]
        }
    ]
}
